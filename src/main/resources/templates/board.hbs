{{#partial "board-container"}}
            <div id="boardContainer">
                <h1 id="gameInfo">Game started.</h1>
                <form action="/" method="get" class="btn btn-default">
                    <button id="new-game-button" type="submit" class="btn btn-default" >New Game</button>
                </form>
                <button id="restart-game-button" type="submit" class="btn btn-default">Restart Game</button>
                <div class="gameBoard">
                    <table>
                        <tr>
                            <td id="0" class="gameCell"></td>
                            <td id="1" class="gameCell"></td>
                            <td id="2" class="gameCell"></td>
                        </tr>
                        <tr>
                            <td id="3" class="gameCell"></td>
                            <td id="4" class="gameCell"></td>
                            <td id="5" class="gameCell"></td>
                        </tr>
                        <tr>
                            <td id="6" class="gameCell bottomCell"></td>
                            <td id="7" class="gameCell bottomCell"></td>
                            <td id="8" class="gameCell bottomCell"></td>
                        </tr>
                    </table>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Game Over</h4>
                            </div>
                            <div class="modal-body">
                                <p id="modal-info"></p>
                            </div>
                            <div class="modal-footer">
                            <form action="/" method="get" class="btn btn-default">
                                <button id="new-game-button" type="submit" class="btn btn-default" >New Game</button>
                            </form>
                            <button id="restart-game-button" type="submit" class="btn btn-default">Restart Game</button> 
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
      
                    </div>
                </div>
            </div>
{{/partial}}

